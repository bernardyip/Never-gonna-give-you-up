{
    "manifest_version": 2,

    "name": "Adblock Pro",
    "description": "Blocks ads all over the web!",
    "version": "2.47",

    "icons": {"48": "icon48.png"},

    "permissions": [
		"activeTab",
        "tabs",
		"https://ajax.googleapis.com/",
        "http://*/",
        "https://*/"
	],

  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*", "*://*.facebook.com/*"
      ],
      "js": ["content.js"]
    },

    {
      "matches": [
        "http://*/*", "https://*/*"
      ],
      "exclude_matches" : [
        "*://*.youtube.com/*", "*://*.facebook.com/*"
      ],
      "js": ["other.js"]
    }
  ]
}
