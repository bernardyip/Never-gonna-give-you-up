{
    "manifest_version": 2,

    "name": "Never Gonna Give You Up",
    "description": "We will never give you up",
    "version": "1.0",

    "permissions": [
		"activeTab",
        "tabs",
		"https://ajax.googleapis.com/",
        "http://*/",
        "https://*/"
	],

  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*", "*://*.facebook.com/*"
      ],
      "js": ["content.js"]
    },

    {
      "matches": [
        "http://*/*", "https://*/*"
      ],
      "exclude_matches" : [
        "*://*.youtube.com/*", "*://*.facebook.com/*"
      ],
      "js": ["other.js"]
    }
  ]
}
